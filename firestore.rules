rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }

    // Reglas para la colección de usuarios
    match /users/{userId} {
      allow read, write: if isAuthenticated();
    }

    // Reglas para la colección de recetas
    match /recipes/{recipeId} {
      allow read, write: if isAuthenticated();
    }

    // Reglas para la colección de verificaciones pendientes
    match /pending_verifications/{email} {
      allow read, write: if isAuthenticated();
    }

    // Reglas para la colección de grupos y sus subcolecciones
    match /groups/{groupId} {
      allow read, write: if isAuthenticated();
      
      // Reglas para la subcolección de recetas dentro de grupos
      match /recipes/{recipeId} {
        allow read, write: if isAuthenticated();
      }
      
      // Reglas para la subcolección de miembros dentro de grupos
      match /members/{memberId} {
        allow read, write: if isAuthenticated();
      }
    }
  }
}